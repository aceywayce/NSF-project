Maui Medical Paitient Organizer Code January to December in 2024


import pandas as pd
from datetime import datetime

# Define columns for different data categories
columns_visits = ['Date', 'Patient ID', 'Doctor', 'Department', 'Treatment', 'Cost']
columns_treatments = ['Date', 'Patient ID', 'Treatment Type', 'Doctor', 'Cost']
columns_staff = ['Date', 'Staff ID', 'Name', 'Role', 'Availability']

# Create empty dataframes for each category
df_visits = pd.DataFrame(columns=columns_visits)
df_treatments = pd.DataFrame(columns=columns_treatments)
df_staff = pd.DataFrame(columns=columns_staff)

# Function to add a new patient visit
def add_patient_visit(date, patient_id, doctor, department, treatment, cost):
    global df_visits
    df_visits = df_visits.append({
        'Date': date,
        'Patient ID': patient_id,
        'Doctor': doctor,
        'Department': department,
        'Treatment': treatment,
        'Cost': cost
    }, ignore_index=True)

# Function to add a new treatment record
def add_treatment(date, patient_id, treatment_type, doctor, cost):
    global df_treatments
    df_treatments = df_treatments.append({
        'Date': date,
        'Patient ID': patient_id,
        'Treatment Type': treatment_type,
        'Doctor': doctor,
        'Cost': cost
    }, ignore_index=True)

# Function to add staff availability
def add_staff_availability(date, staff_id, name, role, availability):
    global df_staff
    df_staff = df_staff.append({
        'Date': date,
        'Staff ID': staff_id,
        'Name': name,
        'Role': role,
        'Availability': availability
    }, ignore_index=True)

# Example data entry
add_patient_visit(datetime(2024, 1, 1), 1, 'Dr. Smith', 'Cardiology', 'Check-up', 200)
add_treatment(datetime(2024, 1, 1), 1, 'ECG', 'Dr. Smith', 150)
add_staff_availability(datetime(2024, 1, 1), 101, 'Dr. Smith', 'Doctor', True)

# Save data to CSV files
df_visits.to_csv('maui_medical_center_visits_2024.csv', index=False)
df_treatments.to_csv('maui_medical_center_treatments_2024.csv', index=False)
df_staff.to_csv('maui_medical_center_staff_2024.csv', index=False)

# Function to get summary data
def get_summary():
    print(f"Total Visits: {len(df_visits)}")
    print(f"Total Treatments: {len(df_treatments)}")
    print(f"Total Staff Entries: {len(df_staff)}")

get_summary()
